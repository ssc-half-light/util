{
  "name": "@ssc-hermes/util",
  "type": "module",
  "description": "A template for typescript *dependency* modules.",
  "version": "0.1.0",
  "main": "src/index.ts",
  "scripts": {
    "lint": "standardx -v \"./**/*.ts\"",
    "build-tests": "esbuild test/*.ts --platform=node --format=esm --outdir=test --keep-names",
    "test": "npm run build && npm run build-tests && rm -rf test/node_modules && cd test && npm i && NODE_ENV=test node ./index.js | npx tap-arc",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build-mjs": "esbuild src/*.ts --format=esm --keep-names --outdir=./dist --out-extension:.js=.js",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-mjs",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.15.18",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape-run": "^10.0.0",
    "tapzero": "^0.6.1",
    "typescript": "^5.0.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "keywords": [
    "template",
    "typescript"
  ],
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@oddjs/odd": "^0.37.0",
    "uint8arrays": "^4.0.3"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssc-hermes/util.git"
  },
  "bugs": {
    "url": "https://github.com/ssc-hermes/util/issues"
  },
  "homepage": "https://github.com/ssc-hermes/util#readme"
}
